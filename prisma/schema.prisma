generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model PaymentIntent {
  id              String        @id @default(uuid())
  amount          BigInt        // Stored in cents/paisa
  currency        String
  status          String        // CREATED, PROCESSING, SUCCEEDED, FAILED
  description     String?
  client_secret   String        @unique // For frontend security
  idempotency_key String?       @unique // Prevents double-charging
  
  created_at      DateTime      @default(now())
  updated_at      DateTime      @updatedAt

  transactions    Transaction[]
}

model Transaction {
  id                String        @id @default(uuid())
  payment_intent_id String
  payment_intent    PaymentIntent @relation(fields: [payment_intent_id], references: [id])
  
  provider_ref_id   String?       // The ID from the Bank (e.g., Stripe ID)
  status            String        // SUCCESS, FAILURE
  response_code     String?       // e.g., "insufficient_funds"
  raw_response      Json?         // Full debug log from bank

  created_at        DateTime      @default(now())
}